#include <iostream>
#include <stdio.h>
using namespace std;
void nhapmang(int n,int a[]){
    for(int i=0;i<n;i++){
        cout<<"nhap phan tu thu"<<i;
        cin>>a[i];
    }
}
void xuatmang(int n ,int a[]){
    for(int i=0;i<n;i++){
      cout<<""<<a[i];
    }
}
int sum(){
	int n ;
	int a[];
    if(n==0){
        return 0;
    }
    if (a[n-1]%2==0){
        return a[n-1]+sum(a,n-1);
        return sum(a,n-1);
    }
    return sum(a,n-1);
    cout<<"tong cac so chan la"<<sum;
}
int main(){
        int n;
         cout<<"hay nhap so luong phan tu mang";
         cin>>n;
         int a[];
         nhapmang(n,a);
         xuatmang(n,a);
         cout<<"tong cac so chan trong mang la "<<sum(n,a);
         return 0;
}
